@using RMM.Data
<RadzenCard Style="padding: 10px 10px; margin:10px; width: 95%;">
    <div class="position-relative d-flex flex-row w-100">
        <div style=" border-right: 1px solid black; padding-right: 10px; display: flex; flex-direction: column; align-items: center; width:15%">
            <RadzenText >Position: @LocationReview.ManagerType</RadzenText>
            <RadzenText >Manager: @LocationReview.ManagerName</RadzenText>
            <h1><b>@LocationReview.Stars</b></h1>
        </div>
        <div style="padding-left: 10px; width: 100%;">
            <div class="d-flex">
                <p style="padding-right: 10px;"><b>@(LocationReview.SenderUsername)</b></p>
                <p style="font-size: .8em; align-self: center;">@LocationReview.SentDateAndTime</p>
            </div>
            <RadzenContent>@LocationReview.Content</RadzenContent>
        </div>
    </div>
</RadzenCard>
@code {
    [Parameter] 
    public LocationReview LocationReview { get; set; }
}
